@model CourseVM

@{
    ViewBag.Title = "Course Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .center-content {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .course-info {
        width: 100%;
        max-width: 800px; 
        text-align: left;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 8px;
        background-color: #f9f9f9;
    }

    .course-info table {
        width: 100%;
    }

    .course-info table tr td {
        padding: 5px;
    }

    .course-info table tr td.label-column {
        width: 40%; 
        font-weight: bold;
    }
</style>

<div class="center-content">
    <div class="course-info">
        <h2>Course Details</h2>
        <table>
            <tr>
                <td class="label-column">Course Name:</td>
                <td>@Html.DisplayFor(model => model.CourseName)</td>
            </tr>
            <tr>
                <td class="label-column">Start Date:</td>
                <td>@Html.DisplayFor(model => model.StartDate)</td>
            </tr>
            <tr>
                <td class="label-column">End Date:</td>
                <td>@Html.DisplayFor(model => model.EndDate)</td>
            </tr>
            <tr>
                <td class="label-column">Course Description:</td>
                <td>@Html.DisplayFor(model => model.CourseDiscription)</td>
            </tr>
            <tr>
                <td class="label-column">Available Seats:</td>
                <td>@Html.DisplayFor(model => model.AvailabeSeats)</td>
            </tr>
        </table>

        <p>
            @Html.ActionLink("Back to List", "Index")
        </p>

        <p>
        @Html.ActionLink("Enroll Now", "Enroll", "Enrollment", new { id = Model.Id }, new { @class = "btn btn-primary text-center" })
            </p>
        <p>

        @Html.ActionLink("Register & Enroll Now", "CreateStudent", "Student", new { id = Model.Id }, new { @class = "btn btn-primary text-center" })
        </p>

    </div>
</div>

@section Scripts {
    <script>
        
    </script>
}
