@model CourseVM

@{
    ViewBag.Title = "Create Course";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create Course</h2>

@using (Html.BeginForm("CreateCourse", "Course", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(model => model.CourseName)
        @Html.TextBoxFor(model => model.CourseName, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.CourseName)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.StartDate)
        @Html.TextBoxFor(model => model.StartDate, new { @class = "form-control datepicker" })
        @Html.ValidationMessageFor(model => model.StartDate)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.EndDate)
        @Html.TextBoxFor(model => model.EndDate, new { @class = "form-control datepicker" })
        @Html.ValidationMessageFor(model => model.EndDate)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CourseDiscription)
        @Html.TextAreaFor(model => model.CourseDiscription, new { @class = "form-control", rows = 4 })
        @Html.ValidationMessageFor(model => model.CourseDiscription)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.AvailabeSeats)
        @Html.TextBoxFor(model => model.AvailabeSeats, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.AvailabeSeats)
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary" })
    </div>
}

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script>
        flatpickr('.datepicker', {
            dateFormat: 'Y-m-d',
            allowInput: true
        });
    </script>
}
